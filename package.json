{
  "name": "parabains-bot",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Renan Machado",
    "email": "renan.mav@hotmail.com",
    "url": "https://twitter.com/renanmav"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint --ext .js,.json,.ts 'packages/**'",
    "standard": "yarn workspace @parabains-bot/standard start",
    "typecheck": "tsc",
    "standard-classifier:deploy": "cd ./packages/standard-classifier && ./scripts/deploy.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn prettier --write",
      "yarn lint"
    ],
    "*.{yaml,yml}": [
      "yarn prettier --write"
    ],
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "console-helpers": "^0.0.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "sort-package-json": "^1.40.0",
    "sucrase": "^3.12.1",
    "tsc": "^1.20150623.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12"
  }
}
