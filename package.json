{
  "name": "parabains-bot",
  "version": "1.0.0",
  "author": {
    "name": "Renan Machado",
    "email": "renan.mav@hotmail.com",
    "url": "https://twitter.com/renanmav"
  },
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "build": "sucrase ./src -d ./dist --transforms typescript,imports",
    "clean": "rm -rf dist",
    "typecheck": "tsc",
    "lint": "eslint --ext .js,.json,.ts 'src/**'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn prettier --write",
      "yarn lint"
    ],
    "*.{yaml,yml}": [
      "yarn prettier --write"
    ],
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "devDependencies": {
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "sort-package-json": "^1.40.0",
    "sucrase": "^3.12.1",
    "tsc": "^1.20150623.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12"
  }
}